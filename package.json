{
    "name": "ecommerce-site",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "test": "jest",
        "cypress:open": "cypress open",
        "db:migrate:dev": "dotenv -e .env.development.local npx prisma migrate dev",
        "db:reset:dev": "cross-env NODE_ENV=development dotenv -e .env.development.local -e .env.local -- npx prisma migrate reset",
        "db:reset:test": "cross-env NODE_ENV=test dotenv -e .env.test.local -e .env.local -- npx prisma migrate reset --force --skip-generate",
        "dev-test": "cross-env NEXT_PUBLIC_APP_ENV=test NODE_ENV=test dotenv -e .env.local npm run dev",
        "seed:prod": "cross-env NODE_ENV=production dotenv -e .env.production.local -- npx prisma db seed"
    },
    "prisma": {
        "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
    },
    "dependencies": {
        "@prisma/client": "^6.7.0",
        "@stripe/stripe-js": "^7.3.0",
        "bcryptjs": "^3.0.2",
        "dotenv": "^17.0.1",
        "next": "15.3.1",
        "next-auth": "^5.0.0-beta.28",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-icons": "^5.5.0",
        "stripe": "^18.1.0",
        "uuid": "^11.1.0",
        "zod": "^4.1.12",
        "zustand": "^5.0.4"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@tailwindcss/postcss": "^4",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@types/jest": "^30.0.0",
        "@types/jest-axe": "^3.5.9",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "cross-env": "^10.1.0",
        "cypress": "^14.5.1",
        "cypress-axe": "^1.6.0",
        "cypress-file-upload": "^5.0.8",
        "dotenv-cli": "^10.0.0",
        "eslint": "^9",
        "eslint-config-next": "15.3.1",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "jest": "^30.0.2",
        "jest-axe": "^10.0.0",
        "jest-environment-jsdom": "^30.0.2",
        "prisma": "^6.7.0",
        "tailwindcss": "^4",
        "ts-node": "^10.9.2",
        "typescript": "^5",
        "whatwg-fetch": "^3.6.20"
    }
}
